<h1>Add migrant</h1>
<form action="/migrant/add" method="post">
  <div class="form-group">
    <label for="refNum">Reference No.</label>
    <input class="form-control" value="" name="refNum" id="refNum"/>
  </div>
  <div class="form-group">
    <label for="name">Name</label>
    <input class="form-control" value="" name="name" id="name"/>
  </div>

  <div class="form-group">
    <label for="address">Address</label>
    <input value="" name="address" class="form-control" id="address"/>
  </div>

  <div class="form-group">
    <label for="state">Present State:</label>
    <select id="state" name="state" class="form-control">
      {{#each states}}
      <option value="{{this}}">{{this}}</option>
      {{/each}}
    </select>
  </div>


  <div class="form-group">
    <label for="phoneNum">Phone:</label>
    <input value="000" name="phoneNum" class="form-control" id="phoneNum"/>
  </div>
  <div class="form-group">
    <label for="verification">Verification:</label>
    <input value="" name="verification" class="form-control" id="verification"/>
  </div>

  <div class="form-group">
    <label for="circle">Revenue Circle:</label>
    <select id="circle" name="circle" class="form-control">
      {{#each circles}}
      <option value="{{this}}">{{this}}</option>
      {{/each}}
    </select>
  </div>

  <button type="submit" class="btn btn-default">Submit</button>
</form>
